# API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GITHUB_TOKEN=your_github_token_here

# AI Budget Control
AI_DAILY_BUDGET_USD=5.0

# Indexer Configuration
INDEXER_WORKERS=20

# API Configuration
CORS_ALLOW_ORIGINS=https://agentrecipes.com,https://www.agentrecipes.com

# Frontend (Next.js static export) build-time settings
NEXT_PUBLIC_SITE_URL=https://agentrecipes.com
NEXT_PUBLIC_API_URL=https://api.agentrecipes.com
NEXT_OUTPUT=export

# VPS reverse-proxy integration (nginx-proxy + letsencrypt companion)
PROXY_NETWORK_NAME=nginx-proxy_default
FRONTEND_VIRTUAL_HOST=agentrecipes.com,www.agentrecipes.com
FRONTEND_LETSENCRYPT_HOST=agentrecipes.com,www.agentrecipes.com
API_VIRTUAL_HOST=api.agentrecipes.com
API_LETSENCRYPT_HOST=api.agentrecipes.com
LETSENCRYPT_EMAIL=admin@example.com
TRUST_PROXY_HEADERS=true
TRUSTED_PROXY_IPS=*

# Cloudflare Deployment (DO NOT COMMIT ACTUAL VALUES)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# Backend URL
API_BASE_URL=https://your-backend-url.com
